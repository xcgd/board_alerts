<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Contextual action to easily test board alerts without the cron task. -->

        <!-- TODO email template with an action to launch it -->

        <record id="action_send_board_alerts" model="ir.actions.server">
            <field name="name">Send board alerts</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_board_board" />
            <field name="state">code</field>
            <field name="code"><![CDATA[
action = pool.get('board.board').send_board_alerts(cr, context=context)
            ]]></field>
        </record>

        <menuitem name="Send board alerts" action="action_send_board_alerts"
            id="menu_send_board_alerts" parent="base.menu_reporting_config"
            groups="base.group_no_one" sequence="10" />

    </data>
</openerp>
